ARG BUILD_FROM
FROM $BUILD_FROM

# Install Python and required packages
RUN apk add --no-cache \
    python3 \
    python3-dev \
    py3-pip \
    gcc \
    musl-dev

# Set working directory
WORKDIR /app

# Copy requirements and install Python dependencies
COPY requirements.txt /app/
RUN pip3 install --no-cache-dir --break-system-packages -r requirements.txt

# Copy application
COPY src/python/agent.py /app/

# Copy startup script
COPY run.sh /app/
RUN chmod a+x /app/run.sh

# Labels for Home Assistant addon
LABEL \
    io.hass.name="Solarmax to MQTT" \
    io.hass.description="Solarmax inverter to MQTT bridge with Home Assistant auto-discovery" \
    io.hass.arch="armhf|aarch64|amd64|armv7|i386" \
    io.hass.type="addon" \
    io.hass.version="1.0.1"

CMD ["/app/run.sh"]
